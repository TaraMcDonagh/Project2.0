        </Grid.ColumnDefinitions>
 
        <Image Source="H:\Oop\Semester 2\Project\Project2.0\Project2.0\images\BeYouTiful.jpg" Grid.Row="0" Grid.Column="1" Margin="0,14,0,50" Grid.RowSpan="2" />
        
